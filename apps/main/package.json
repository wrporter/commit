{
  "name": "commit-main",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "engines": {
    "node": "22",
    "npm": ">=10"
  },
  "imports": {
    "~/*": "./app/*",
    "#server/*": "./server/*",
    "#tests/*": "./tests/*"
  },
  "scripts": {
    "build": "NODE_ENV=production run-s build:*",
    "build:react-router": "react-router build",
    "build:server": "tsx scripts/build-server.ts",
    "ci": "run-p lint test:coverage build && npm run typecheck",
    "clean": "rm -rf junit.xml coverage build public/build",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "dev": "npm run dev:base -- server/main.ts",
    "dev:base": "NODE_ENV=development tsx watch --env-file=.env --clear-screen=false --ignore \".cache/**\" --ignore \"app/**\" --ignore \"vite.config.ts.timestamp-*\" --ignore \"build/**\" --ignore \"node_modules/**\"",
    "dev:debug": "npm run dev:base -- --inspect server/main.ts",
    "dev:trace": "npm run dev:base -- --require=./server/opentelemetry.cjs server/main.ts",
    "docker:build": "SCOPE=main .ci/build.sh",
    "docker:deploy": "SCOPE=main .ci/deploy.sh",
    "docker:run": "SCOPE=main .ci/run-local.sh",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "npm run lint -- --fix",
    "run": "node -r esbuild-runner/register --env-file=.env",
    "start": "NODE_ENV=production node --enable-source-maps --env-file=.env --require=./server-build/opentelemetry.cjs ./server-build/main.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "react-router typegen && tsc"
  },
  "dependencies": {
    "@conform-to/react": "1.8.2",
    "@conform-to/zod": "1.8.2",
    "@epic-web/client-hints": "1.3.7",
    "@epic-web/remember": "1.1.0",
    "@heroicons/react": "2.2.0",
    "@heroui/react": "2.8.2",
    "@internationalized/date": "3.8.2",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/auto-instrumentations-node": "0.62.0",
    "@opentelemetry/sdk-node": "0.203.0",
    "@react-router/express": "7.7.1",
    "@react-router/node": "7.7.1",
    "@rvf/react-router": "7.1.5",
    "@rvf/zod": "7.0.3",
    "@wesp-up/express": "4.0.1",
    "bcryptjs": "3.0.2",
    "cookie": "1.0.2",
    "decimal.js": "10.6.0",
    "drizzle-orm": "0.44.4",
    "express": "5.1.0",
    "framer-motion": "12.23.12",
    "isbot": "5.1.29",
    "postgres": "3.4.7",
    "prom-client": "15.1.3",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-router": "7.7.1",
    "remix-auth": "4.2.0",
    "remix-auth-form": "3.0.0",
    "remix-auth-oauth2": "3.4.1",
    "remix-utils": "8.8.0",
    "source-map-support": "0.5.21",
    "tailwind-merge": "3.3.1",
    "tailwind-variants": "2.1.0",
    "tiny-invariant": "1.3.3",
    "uuid": "11.1.0",
    "zod": "3.25.76",
    "zod-form-data": "3.0.0"
  },
  "devDependencies": {
    "@react-router/dev": "7.7.1",
    "@react-router/remix-routes-option-adapter": "7.7.1",
    "@testing-library/jest-dom": "6.6.4",
    "@testing-library/react": "16.3.0",
    "@types/bcryptjs": "3.0.0",
    "@types/express": "5.0.3",
    "@types/fs-extra": "11.0.4",
    "@types/node": "24.1.0",
    "@types/pg": "8.15.5",
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7",
    "@types/source-map-support": "0.5.10",
    "@vitejs/plugin-react": "4.7.0",
    "@vitest/coverage-v8": "3.2.4",
    "@wesp-up/eslint-config-react": "2.1.0",
    "autoprefixer": "10.4.21",
    "drizzle-kit": "0.31.4",
    "esbuild": "0.25.8",
    "eslint": "9.32.0",
    "fs-extra": "11.3.0",
    "jsdom": "26.1.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.5.6",
    "remix-flat-routes": "0.8.5",
    "tailwindcss": "4.1.11",
    "tsx": "4.20.3",
    "typescript": "5.9.2",
    "vite": "7.0.6",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  }
}
